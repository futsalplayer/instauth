<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<reference id="remoteRepositoryManager" interface="org.eclipse.aether.impl.RemoteRepositoryManager" />
	<reference id="localRepositoryProvider" interface="org.eclipse.aether.impl.LocalRepositoryProvider" />
	<reference id="versionRangeResolver" interface="org.eclipse.aether.impl.VersionRangeResolver" />

	<bean id="defaultRepositorySystem" class="org.eclipse.aether.internal.impl.DefaultRepositorySystem">
		<property name="remoteRepositoryManager" ref="remoteRepositoryManager" />
		<property name="localRepositoryProvider" ref="localRepositoryProvider" />
		<property name="versionRangeResolver" ref="versionRangeResolver" />
	</bean>

	<service ref="defaultRepositorySystem" interface="org.eclipse.aether.RepositorySystem" />

</blueprint>
